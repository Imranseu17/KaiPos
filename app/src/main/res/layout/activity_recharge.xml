<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.RechargeActivity">

    <!--<com.airbnb.lottie.LottieAnimationView-->
        <!--android:id="@+id/animation_view"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_centerInParent="true"-->
        <!--android:visibility="gone" />-->

    <LinearLayout
        android:id="@+id/layout_recharge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_16sdp"
            android:layout_marginRight="@dimen/_16sdp"
            app:cardCornerRadius="@dimen/_4sdp"
            app:cardElevation="@dimen/_5sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/_10sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/_10sdp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/label_account_no"
                        android:textAppearance="@style/TextAppearance.FontPath"
                        android:textColor="#6e7f8d"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/txt_account_no"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:text="204678923536"
                        android:textAppearance="@style/TextAppearance.FontPath"
                        android:textColor="@color/txt_color"
                        android:textSize="17sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/_10sdp">


                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/label_select_amount"
                            android:textAppearance="@style/TextAppearance.FontPath"
                            android:textColor="#6e7f8d"
                            android:textSize="17.3sp" />


                        <LinearLayout
                            android:id="@+id/layout_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">


                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/txt_price"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="500"
                                    android:textAppearance="@style/TextAppearance.FontPath"
                                    android:textColor="#141a22"
                                    android:textSize="17.3sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/label_tk"
                                    android:textAppearance="@style/TextAppearance.FontPath"
                                    android:textColor="#141a22"
                                    android:textSize="17.3sp" />
                            </LinearLayout>

                            <ImageView
                                android:layout_width="15dp"
                                android:layout_height="18dp"
                                android:layout_gravity="right"
                                android:layout_marginRight="@dimen/_10sdp"
                                android:src="@drawable/ic_down_arrow1" />
                        </LinearLayout>


                    </LinearLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_layout_amount"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_6sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:visibility="gone"
                        app:errorEnabled="true"
                        app:passwordToggleEnabled="true">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/edt_amount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/label_amount"
                            android:inputType="numberDecimal"
                            android:textAppearance="@style/TextAppearance.FontPath" />

                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/_10sdp"
                    android:paddingRight="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_5sdp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/label_tk"
                            android:textAppearance="@style/TextAppearance.FontPath"
                            android:textColor="@color/light_gray"
                            android:textSize="10sp" />


                        <TextView
                            android:id="@+id/txt_taka"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:background="#00000000"
                            android:hint="500"
                            android:inputType="text"
                            android:text="500"
                            android:textAppearance="@style/TextAppearance.FontPath"
                            android:textColor="@color/txt_color"
                            android:textColorHint="@color/txt_color"
                            android:textSize="17.3sp" />


                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="5dp"
                            android:background="#eff0f4" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/label_gas_volume_m3"
                            android:textAppearance="@style/TextAppearance.FontPath"
                            android:textColor="@color/light_gray"
                            android:textSize="10sp" />


                        <TextView
                            android:id="@+id/txt_gas"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:background="#00000000"
                            android:hint="54.95"
                            android:inputType="text"
                            android:text="54.95"
                            android:textAppearance="@style/TextAppearance.FontPath"
                            android:textColor="@color/txt_color"
                            android:textColorHint="@color/txt_color"
                            android:textSize="17.3sp" />


                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="5dp"
                            android:background="#eff0f4" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/_10sdp"
                    android:paddingRight="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_5sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/label_tax_amount"
                        android:textAppearance="@style/TextAppearance.FontPath"
                        android:textColor="@color/light_gray"
                        android:textSize="10sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txt_tax"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="#00000000"
                            android:hint="000"
                            android:inputType="text"
                            android:textAppearance="@style/TextAppearance.FontPath"
                            android:textColor="@color/txt_color"
                            android:textColorHint="@color/light_gray"
                            android:textSize="17.3sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="#00000000"
                            android:hint="@string/label_tk"
                            android:inputType="text"
                            android:text="@string/label_tk"
                            android:textAppearance="@style/TextAppearance.FontPath"
                            android:textColor="@color/txt_color"
                            android:textColorHint="@color/light_gray"
                            android:textSize="17.3sp" />

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:background="#eff0f4" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/_10sdp"
                    android:paddingRight="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_5sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/label_total_amount"
                        android:textAppearance="@style/TextAppearance.FontPath"
                        android:textColor="@color/light_gray"
                        android:textSize="10sp" />


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_6sdp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txt_total_amount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="#00000000"
                            android:hint="500"
                            android:inputType="text"
                            android:text="500"
                            android:textAppearance="@style/TextAppearance.FontPath"
                            android:textColor="@color/txt_color"
                            android:textColorHint="@color/light_gray"
                            android:textSize="17.3sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="#00000000"
                            android:hint="@string/label_tk"
                            android:inputType="text"
                            android:text="@string/label_tk"
                            android:textAppearance="@style/TextAppearance.FontPath"
                            android:textColor="@color/txt_color"
                            android:textColorHint="@color/light_gray"
                            android:textSize="17.3sp" />

                    </LinearLayout>
                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:background="#eff0f4" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <Button
            android:id="@+id/btn_submit"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_44sdp"
            android:layout_below="@+id/card_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:background="@drawable/drop_shadow"
            android:padding="@dimen/_8sdp"
            android:text="@string/label_submit"
            android:textAllCaps="false"
            android:textAppearance="@style/TextAppearance.FontPath"
            android:textColor="@color/colorWhite" />
    </LinearLayout>
</LinearLayout>
